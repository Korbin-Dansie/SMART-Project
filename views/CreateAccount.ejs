<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>People list</title>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
  <link rel="stylesheet" type="text/css" href="/font/bootstrap-icons.css">
  <script type="text/javascript" src="crypto-js.js"></script>
</head>

<script>
  function checkPassword(event) {
    // Get the two passwords entered
    const password1 = document.getElementById("password").value;
    const password2 = document.getElementById("confirmPassword").value;
    let passwordValid = false;
    let message = "";
    if (password1 == "") {
      message = "Please enter password";
    } else if (password2 == "") {
      message = "Please re-enter password";
    } else if (password1 != password2) {
      message = "Passwords must match";
    } else {
      passwordValid = true;
    }

    if (!passwordValid) {
      document.getElementById("message").innerHTML = message;
      event.preventDefault();
    } else {
      let salt = CryptoJS.lib.WordArray.random(8);
      document.getElementById("salt").value = salt;
      let hashed = CryptoJS.SHA256(password1 + ":" + salt).toString(CryptoJS.enc.Hex);
      document.getElementById("hash").value = hashed;
    }
  }
</script>

<body>
  <div class="container-fluid vh-100" style="margin-top:10px">
    <div class="" style="margin-top:100px">
      <div class="rounded d-flex justify-content-center">
        <div class="col-md-4 col-sm-12 shadow-lg p-5 bg-light">
          <div style="text-align:center"><h1>Create An Account</h1></div>
          <div class="text-center">
            <p id="message" class="text-danger" style="height:25px">
                <%- locals.message %>
            </p>
        </div>
          <form onSubmit="return checkPassword(event);" method="post">
            <div class="p-4">
            <Label for="accountType">Account Type</Label><br><br>
            <select name="accountType" id="accountType" class="form-control" style="appearance:menulist">
              <option value="Social Worker">Social Worker</option>
              <option value="Instructor">Instructor</option>
              <option value="Owner">Owner / Board of Directors</option>
              <option value="USA Sponsor">USA Sponsor</option>
              <option value="Admin">Admin</option>
            </select> <br>
            <p>First Name</p>
            <div class="input-group mb-3">
              <span class="input-group-text bg-primary">
                <i class="bi bi-person-circle text-white"></i>
              </span>
              <input id="firstName" name="firstName" type="text" class="form-control" placeholder="First Name">
            </div>
            <p>Last Name</p>
            <div class="input-group mb-3">
              <span class="input-group-text bg-primary">
                <i class="bi bi-person-circle text-white"></i>
              </span>
              <input id="lastName" name="lastName" type="text" class="form-control" placeholder="Last Name">
            </div>
            <p>Email address</p>
            <div class="input-group mb-3">
              <span class="input-group-text bg-primary">
                <i class="bi bi-person-circle text-white"></i>
              </span>
              <input id="emailAddress" name="emailAddress" type="text" class="form-control" placeholder="Email Address">
            </div>
            <p>Password</p>
            <div class="input-group mb-3">
              <span class="input-group-text bg-primary">
                  <i class="bi bi-lock-fill text-white"></i>
              </span>
              <input id="password" type="password" class="form-control" placeholder="Password">
            </div>
            <p>Confirm Password</p>
            <div class="input-group mb-3">
              <span class="input-group-text bg-primary">
                  <i class="bi bi-lock-fill text-white"></i>
              </span>
              <input id="confirmPassword" type="password" class="form-control" placeholder="Confirm Password">
            </div>
            <input type="hidden" id="hash" name="hash">
            <input type="hidden" id="salt" name="salt">
            <button class="btn btn-primary mt-2" type="submit">
              Submit
            </button>
            <button class="btn btn-primary mt-2">
              Back
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>